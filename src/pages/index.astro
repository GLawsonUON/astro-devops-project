---
const questions = [
  {
    question: "What is the capital of France?",
    choices: ["Berlin", "Paris", "London", "Madrid"],
    answer: "Paris"
  },
  {
    question: "2 + 2 = ?",
    choices: ["3", "4", "5", "6"],
    answer: "4"
  }
];
---
<html>
  <head><title>Quiz App</title></head>
  <body>
    <h1>Simple Quiz App</h1>
    <ul>
      {questions.map(q => (
        <li>
          <p>{q.question}</p>
          <ul>
            {q.choices.map(choice => (
              <li><button>{choice}</button></li>
            ))}
          </ul>
        </li>
      ))}
    </ul>
  </body>
</html>
